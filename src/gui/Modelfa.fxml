<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane stylesheets="@../../../utils/MainStyle.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane layoutX="30.0" layoutY="30.0" style="-fx-background-color: white;" styleClass="window-rounded"
                AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
                AnchorPane.topAnchor="30.0">
        <effect>
            <DropShadow blurType="GAUSSIAN" color="#00000033" height="50.0" radius="24.5" width="50.0"/>
        </effect>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">

            <VBox spacing="10.0">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <Text fx:id="typeText" text="Type" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="prixText" text="Prix" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="niveauAccessText" text="NiveauAccess" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="reservationsRestantesText" text="ReservationsRestantes" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>

            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <Text fx:id="titreText" text="Titre" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="dureeText" text="Duree" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="reservationsTotalText" text="ReservationsTotal" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>

            </VBox>

        </HBox>
    </AnchorPane>
</AnchorPane>
